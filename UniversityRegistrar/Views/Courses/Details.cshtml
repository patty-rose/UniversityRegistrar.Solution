@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)<h3>
<h3>@Html.DisplayNameFor(model => model.CourseNumber): @Html.DisplayFor(model => model.CourseNumber)<h3>

<h3>@Html.DisplayNameFor(model => model.JoinCourseDept.join): @Html.DisplayFor(model => model.JoinCourseDept.join)<h3> 
  <ul>
@foreach(var join in Model.JoinCourseDept)
    {
      <li>@join.Department.DepartmentName</li>
    }
  </ul>
  
@if(@Model.JoinEntities.Count == 0)
{
  <p>This Course does not contain any students</p>
}
else
{
  <h4>Students:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}
<hr />
<p>@Html.ActionLink("Add student", "Create", "Students", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>