@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department

<h2>Department Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.DepartmentName): @Html.DisplayFor(model => model.DepartmentName)<h3>

@if(@Model.JoinDeptStu.Count == 0)
{
  <p>This Department does not contain any Students</p>
}
else
{
  <h4>Students:</h4>
  <ul>
  @foreach(var join in Model.JoinDeptStu)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

@if(@Model.JoinCourseDept.Count == 0)
{
  <p>This Department does not contain any courses</p>
}
else
{
  <h4>Courses:</h4>
  <ul>
  @foreach(var join in Model.JoinCourseDept)
  {
    <li>@join.Course.CourseName</li>
  }
  </ul>
}

<hr />
<p>@Html.ActionLink("Add Student", "Create", "Students", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Edit Department", "Edit", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Delete Department", "Delete", new { id = Model.DepartmentId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>